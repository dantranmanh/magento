<?php
// Intergation Conversion Tracking code
$westfieldCampaignID = Mage::getStoreConfig('conversiontracking/conversiontracking_group/conversiontracking_input',Mage::app()->getStore());;
$westfieldItemArray = "";
// Retrieve order
$thisOrderId = Mage::getSingleton('checkout/session')->getLastRealOrderId();
$order = Mage::getModel('sales/order');
$order->loadByIncrementId($thisOrderId);
// Iterate cart items
$items = $order->getItemsCollection();
foreach ($items as $item) {
    // Determine item price, minus any discounts
    $itemPrice = number_format($item->getPriceInclTax() - $item->getDiscountAmount(), 2, '.', '');
    // Check for valid price
    if ($itemPrice != 0.00) {
        // Retrieve product
        $productId = $item->getProductId();
        $product = Mage::getModel('catalog/product')->load($productId);
        // Get first category for product
        $itemCategory = "";
        foreach ($product->getCategoryIds() as $category_id) {
            $_cat = Mage::getModel('catalog/category')->load($category_id);
            $itemCategory = $_cat->getName();
            if ($itemCategory != "") break; // Break after first valid category
        }
        // Validation
        $filters = array('/', '[', ']', ':', ' ');
        $itemCategory = ($itemCategory == "" ? "SALE" : str_replace($filters, '', $itemCategory));
        $sku = str_replace($filters, '', $item->getSku());
        // Append item code
        $westfieldItemArray .= "[category:" . $itemCategory . "/sku:" . $sku . "/value:" . $itemPrice . "/quantity:" . $item->getQtyOrdered() . "]";
    }
}
// Build pixel string
$westfieldPixelString = '<img src="//prf.hn/conversion/campaign:' . $westfieldCampaignID . '/conversionref:' . $this->escapeHtml($thisOrderId) . '/currency:' . Mage::app()->getStore()->getCurrentCurrencyCode() . '/' . $this->escapeHtml($westfieldItemArray) . '" height="1" width="2" />';
