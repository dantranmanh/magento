?>
<?php if ($this->getIsNeedToDisplaySideBar()): ?>
<?php
    $theme = $this->helper('ultimo');
    $cartClasses = '';

    $_cartQty = $this->getSummaryCount();
    if (!$_cartQty) {
        $cartClasses .= ' is-empty';
    }
    else {
        $cartClasses .= ' is-not-empty';
    }

    $canApplyMsrp = $this->canApplyMsrp();
?>
<div id="mini-cart-wrapper-regular">
<div id="mini-cart" class="mini-cart dropdown<?php echo $cartClasses; ?>">

    <a href="#header-cart" class="mini-cart-heading dropdown-heading cover skip-link skip-cart">
        <span>
        
            <span class="icon ic ic-cart"></span>
            <?php if ($_cartQty > 0): ?>
                <span class="count"><?php echo $_cartQty; ?></span>
            <?php endif; ?>
            <span class="label"<?php if (!$theme->getCfg('header/cart_label')) echo ' style="display:none;"'; ?>><?php echo $this->__('Cart'); ?></span>
            <?php /* Comment-out to remove the subtotal from the mini-cart heading
            <?php if ($_cartQty > 0): ?>
                <?php if (!$canApplyMsrp): ?>
                    <span class="summary hide-below-960"><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()); ?></span>
                <?php endif; ?>
            <?php else: ?>
                <span class="summary hide-below-960"><?php echo Mage::helper('checkout')->formatPrice(0); ?></span>
            <?php endif; ?>
            <span class="caret">&nbsp;</span>
			*/ ?>

        </span>
    </a> <!-- end: heading -->
    
    <?php $_items = $this->getRecentItems(); ?>
    <?php if (count($_items)): ?>
        <div id="header-cart" class="mini-cart-content dropdown-content left-hand block block-cart skip-content skip-content--style">
            <div class="">

                <?php if ($tmpHtml = $this->getChildHtml('block_mini_cart_above_products')): ?>
                    <div class="block_mini_cart_above_products"><?php echo $tmpHtml; ?></div>
                <?php endif; ?>
            
                <div class="block-subtitle"><?php echo $this->__('Recently added item(s)') ?></div>
                <ol id="cart-sidebar" class="mini-products-list clearer">
                <?php foreach($_items as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach; ?>
                </ol>
                <script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>

                <div class="subtotal">
                    <?php if ($canApplyMsrp): ?>
                        <span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
                    <?php else: ?>
						<div class="grid12-6 a-left">
							<span class="label"><?php echo $this->__('Subtotal') ?></span>
						</div>
						<div class="grid12-6 a-right">
							<span class="toal" style="display: block;"><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></span>
                            <span style="font-size: 11px; font-weight: normal; font-style: italic"><?php echo Mage::helper('tax')->getIncExcText(true) ?></span>
						</div>
                    <?php endif; ?>
                </div>

                <div class="actions clearer">
					<div class="grid12-6 a-center">
						<a title="<?php echo Mage::helper('core')->quoteEscape($this->__('View Shopping Bag')) ?>" class="view-bag" href="<?php echo $this->getUrl('checkout/cart') ?>"><?php echo $this->__('View Shopping Bag') ?></a>
					</div>
                    
                    <?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
						<div class="grid12-6 a-right">
							<button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Checkout')) ?>" class="button btn-checkout btn-inline " onclick="setLocation('<?php echo $this->getCheckoutUrl(); ?>')"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
						</div>
						<?php echo $this->getChildHtml('extra_actions') ?>
                    <?php endif; ?>
                </div>

            </div> <!-- end: inner block -->
        </div> <!-- end: dropdown-content -->
        <div style="display: none" id="sidebar-loading" class="sidebar-loading"><img src="<?php echo $this->getSkinUrl('images/bx_loader.gif');?>"></div>
    <?php else: ?>
        <div id="header-cart" class="mini-cart-content dropdown-content left-hand block block block-cart skip-content skip-content--style">
            <div class="block-content-inner">

                <?php if ($tmpHtml = $this->getChildHtml('block_mini_cart_above_products')): ?>
                    <div class="block_mini_cart_above_products"><?php echo $tmpHtml; ?></div>
                <?php endif; ?>
                <div class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></div>

            </div> <!-- end: inner block -->
        </div> <!-- end: dropdown-content -->
    <?php endif ?>

</div> <!-- end: mini-cart -->
</div> <!-- end: mini-cart-wrapper-regular -->

<?php endif;?>